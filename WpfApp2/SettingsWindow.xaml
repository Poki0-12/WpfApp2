<Window x:Class="WpfApp2.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="MyLabel" FontSize="{Binding ElementName=MySlider, Path=Value}" Content="{Binding ElementName=MyTextBox, Path=Text}"/>
        <TextBox Text="Hello" x:Name="MyTextBox" FontSize="12"/>
        <Slider x:Name="MySlider" Minimum="10" Maximum="50"/>
    </StackPanel>
</Window>
